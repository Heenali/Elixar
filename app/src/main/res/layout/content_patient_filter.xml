<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left|center"
        android:background="@drawable/colorgradient"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/test_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Filter"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/backbtn" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="Reset"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:id="@+id/reset" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".60"
                        android:orientation="horizontal" >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/gender" />

                        <TextView
                            android:id="@+id/tvAddBusiness"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="7.74"
                            android:padding="10dp"
                            android:text="Gender"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75"
                        android:padding="10dp"
                        android:orientation="horizontal" >



                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight=".20"
                            android:id="@+id/all_gender"
                            android:background="@drawable/border"
                            android:orientation="horizontal" >


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="All"
                                android:singleLine="true"
                                android:textSize="15dp"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:layout_gravity="left|center"
                                android:gravity="center|center"
                                android:ellipsize="end"
                                android:id="@+id/text_all"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".20"
                            android:id="@+id/male_gender"
                            android:background="@drawable/border2"
                            android:orientation="horizontal" >



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Male"
                                android:singleLine="true"
                                android:textSize="15dp"
                                android:layout_gravity="center|center_vertical"
                                android:gravity="center"
                                android:ellipsize="end"
                                android:textColor="@color/app_theme_color"
                                android:id="@+id/text_male"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".20"
                            android:id="@+id/female_gender"
                            android:background="@drawable/border1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Female"
                                android:singleLine="true"
                                android:textSize="15dp"
                                android:layout_gravity="center|center_vertical"
                                android:gravity="center"
                                android:ellipsize="end"
                                android:textColor="@color/app_theme_color"
                                android:id="@+id/text_female"
                                android:textStyle="bold" />




                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />


                <LinearLayout
                    android:id="@+id/llBusinessPreview"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:src="@drawable/rate_selected"
                        android:id="@+id/imageView5" />

                    <TextView
                        android:id="@+id/tvBusinessPreview"
                        style="@style/Text.MenuItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Rating"
                        android:textSize="13sp" />


                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ratingBar"
                        android:numStars="5"
                        android:paddingTop="10dp"
                        style="@style/customRatingBar"/>
                </LinearLayout>

                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />

                <LinearLayout
                    android:id="@+id/llBasicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:src="@drawable/beforetime" />

                    <TextView
                        android:id="@+id/tvBasicInfo"
                        style="@style/Text.MenuItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Before time"
                        android:textSize="13sp" />
                    <EditText
                        android:id="@+id/bt_on_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/buttonround"
                        android:editable="false"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:hint="From"
                        android:ems="4"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"

                        android:layout_weight="0.32" />

                </LinearLayout>

                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />


                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:src="@drawable/aftertime"
                        android:id="@+id/imageView8" />

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/Text.MenuItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="After time"
                        android:textSize="13sp"/>

                    <EditText
                        android:id="@+id/bt_off_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/buttonround"
                        android:editable="false"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:hint="to"
                        android:ems="4"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"

                        android:layout_weight="0.32" />
                </LinearLayout>

                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />



                <LinearLayout
                    android:id="@+id/linlanguage"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:src="@drawable/language"
                        android:id="@+id/imageView6" />

                    <TextView
                        android:id="@+id/tvTiming"
                        style="@style/Text.MenuItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Language"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"

                        android:text="Eglish, Hindi,  Gujrati"
                        android:id="@+id/textView3" />
                </LinearLayout>
                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />
                <LinearLayout
                    android:id="@+id/linlocation"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:src="@drawable/location"
                        android:id="@+id/imageView7" />

                    <TextView
                        android:id="@+id/tvPhotos"
                        style="@style/Text.MenuItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Location"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="10dp"
                        android:text="Vadodara"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:id="@+id/textView6"
                        android:layout_weight="0.34" />
                </LinearLayout>

                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal">
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".60"
                        android:orientation="horizontal" >


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/cost" />

                        <TextView
                            android:id="@+id/tvAddBusinessd"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="7.74"
                            android:padding="10dp"
                            android:text="Cost"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".40"
                        android:gravity="top|start"
                        android:orientation="horizontal" >

                        <org.florescu.android.rangeseekbar.RangeSeekBar
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/seekValuemin"
                            android:id="@+id/seekbar"
                            rsb:absoluteMaxValue="100"
                            rsb:absoluteMinValue="0"
                            android:gravity="top|start"

                            />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />




                <LinearLayout
                    android:id="@+id/llStatistic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:id="@+id/linservices"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/service"
                            android:id="@+id/imageView10" />

                        <TextView
                            android:layout_width="173dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Services list"
                            android:id="@+id/textView4"
                            android:layout_weight="0.95" />

                        <TextView
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:text="Services"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:id="@+id/textView5" />

                    </LinearLayout>

                    <TextView
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_e8" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llEngagements"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:id="@+id/lininsurance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/insurance" />

                        <TextView
                            android:id="@+id/tvPostAnOffer"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:textSize="13sp"
                            android:text="insurance card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:text="Allscript"
                            android:textColor="@color/colorPrimary"
                            android:src="@drawable/downarrow"
                            android:layout_weight="0.31" />
                    </LinearLayout>

                    <TextView
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_e8" />




                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <TextView
            style="@style/Text.MenuItem"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e8" />

    </LinearLayout>


</LinearLayout>