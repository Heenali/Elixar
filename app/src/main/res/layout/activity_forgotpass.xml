<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@color/white"
    android:layout_weight="1"
    android:padding="5dp" android:orientation="vertical" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:id="@+id/mess_layout"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/round_edittext"
            android:textSize="15dp"
            android:padding="10dp"
            android:hint="Email Address"
            android:gravity="start"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:id="@+id/email_edittext"
            android:layout_toRightOf="@+id/hometype_icon"
            android:layout_toEndOf="@+id/hometype_icon"
            android:layout_weight="0.15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_bg"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.17">
        <TextView
            android:id="@+id/tvreset"
            style="@style/Button.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link_forgot"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonshape"
            android:clickable="true"
            android:elevation="2dp"
            android:ems="10"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
