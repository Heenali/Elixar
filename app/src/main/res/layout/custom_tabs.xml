<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/tab_search"
        android:background="#ececec"
        android:gravity="center"

            android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:src="@drawable/search_gray" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:textSize="11sp"
            />

        <View
            android:id="@+id/viewHomeStrip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible"></View>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#ececec"
        android:id="@+id/tab_app"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:src="@drawable/appointment_gray" />

        <TextView
            android:id="@+id/tvDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:singleLine="true" />

        <View
            android:id="@+id/viewDealStrip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"

        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/tab_report"
        android:background="#ececec"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:src="@drawable/report_gray" />

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MedicalID"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:singleLine="true" />

        <View
            android:id="@+id/viewReportStrip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/tab_noti"
        android:background="#ececec"
        android:gravity="center"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivNotifications"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/notification_gray" />

            <TextView
                android:id="@+id/tvNotificationCount"


                android:textSize="12sp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/notification_gray"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:singleLine="true" />

        <View
            android:id="@+id/viewNotificationsStrip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible"></View>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#ececec"
        android:id="@+id/tab_medicleid"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAccount"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/acc_gray" />

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            />

        <View
            android:id="@+id/viewAccountStrip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible"></View>

    </LinearLayout>


</LinearLayout>