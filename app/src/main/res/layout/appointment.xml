<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left|center"
        android:background="@color/app_theme_color"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Appoinment"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/backbtn" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="vertical"
           >



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/id_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center|center"
                    android:background="@color/white"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal" >


                    <com.meg7.widget.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pro"
                        android:id="@+id/imag" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/datetime_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:paddingTop="10dp"
                    android:paddingBottom="0dp"
                    android:gravity="left|top"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <TextView
                        android:text=" Dr Rajat Tokas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc1"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="1dp" />


                    <TextView
                        android:text="Mumbai Area coloni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc2"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="10sp"
                        android:padding="2dp" />

                    <TextView
                        android:text="MBBS (Mast of Bussiness Administration)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc3"
                        android:singleLine="true"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:padding="2dp" />

                    <TextView
                        android:text="2012-56231"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc4"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:padding="2dp" />

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        />



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"

            android:weightSum="1">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:background="@color/gray_ea"
                android:orientation="horizontal"
                android:id="@+id/calender_layout">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/calander"
                    android:id="@+id/calender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10th January"
                    android:singleLine="true"
                    android:textSize="10dp"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:textColor="@color/gray_2b"
                    android:id="@+id/text1"/>



            </LinearLayout>
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <LinearLayout

                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:background="@color/gray_ea"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/time"
                    android:id="@+id/time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="17:15"
                    android:singleLine="true"
                    android:textSize="10dp"
                    android:layout_gravity="left|center"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:textColor="@color/gray_2b"
                    android:id="@+id/text2"/>



            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <LinearLayout
                    android:id="@+id/main_linear"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/gray_e8" />


                    <LinearLayout
                        android:id="@+id/llAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/tvAddress"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:padding="10dp"
                            android:text="Will You use insurance?"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/downarrow"
                            android:layout_weight="0.21" />
                    </LinearLayout>
                    <TextView
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_e8" />

                    <LinearLayout
                        android:id="@+id/llAddBusiness"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/tvAddBusiness"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="10dp"
                            android:text="Reason for Visit ?"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/downarrow"
                            android:layout_weight="0.13" />

                    </LinearLayout>

                    <TextView
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_e8" />
                    <LinearLayout
                        android:id="@+id/llBasicInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBasicInfo"
                            style="@style/Text.MenuItem"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:padding="10dp"
                            android:text="Have you visited before?"
                            android:textSize="14sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/app_name"
                            android:padding="10dp"
                            android:src="@drawable/downarrow"
                            android:layout_weight="0.13" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    style="@style/Text.MenuItem"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_e8" />
                <LinearLayout
                    android:id="@+id/layout_tab"
                    android:layout_width="fill_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/tab1_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight=".50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border"
                        android:orientation="horizontal" >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="I'm a new patient"
                            android:singleLine="true"
                            android:textSize="10dp"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:layout_gravity="left|center"
                            android:gravity="center|center"
                            android:ellipsize="end"
                            android:id="@+id/tab1"/>



                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tab2_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/border1"
                        android:orientation="horizontal" >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="I have seen before"
                            android:singleLine="true"
                            android:textSize="10dp"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:textColor="@color/app_theme_color"
                            android:id="@+id/tab2"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/title"
                        style="@style/Text.MenuItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Appointment Book for?"
                        android:textSize="14sp" />

                    </LinearLayout>




                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"

                    android:weightSum="1">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >


                        <RadioButton
                            android:text="Self"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton1"
                            android:layout_weight="1" />




                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal" >


                        <RadioButton
                            android:text="Family"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton2"
                            android:layout_weight="1" />


                    </LinearLayout>
                    </LinearLayout>

            </LinearLayout>

        </LinearLayout>




            </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:gravity="center|bottom"
        android:background="@color/app_theme_color"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:id="@+id/next_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />

    </LinearLayout>
</LinearLayout>
